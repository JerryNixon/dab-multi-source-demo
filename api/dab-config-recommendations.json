{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('RECOMMENDATIONS_CONNECTION_STRING')"
  },
  "entities": {
    "Recommendation": {
      "source": {
        "object": "dbo.Recommendations",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Recommendation",
          "plural": "Recommendations"
        }
      },
      "rest": {
        "enabled": true,
        "path": "/recommendations"
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": ["read"]
        }
      ]
    }
  }
}
